<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Color Palette-->
    <SolidColorBrush x:Key="color1" Color="#E285DE"/>
    <SolidColorBrush x:Key="color2" Color="#784DFD"/>

    <!--Font Colors-->
    <SolidColorBrush x:Key="titleColor1" Color="#D5CFF5"/>
    <SolidColorBrush x:Key="titleColor2" Color="#BCBEE0"/>
    <SolidColorBrush x:Key="plainTextColor1" Color="#9497CD"/>
    <SolidColorBrush x:Key="plainTextColor2" Color="#7376BD"/>
    
    <!--Panel Colors-->
    <SolidColorBrush x:Key="panelOverColor" Color="#281269"/>
    <SolidColorBrush x:Key="panelActiveColor" Color="#2B1372"/>
    
    <!--Button Colors-->
    <SolidColorBrush x:Key="btnCloseColor" Color="#FB539B"/>
    <SolidColorBrush x:Key="btnMaximizeColor" Color="#FFC047"/>
    <SolidColorBrush x:Key="btnMinimizeColor" Color="#78A3FC"/>

</ResourceDictionary>