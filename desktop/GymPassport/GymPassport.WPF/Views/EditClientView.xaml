<UserControl
    x:Class="GymPassport.WPF.Views.EditClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:GymPassport.WPF.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GymPassport.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,30,0,30"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Noves dades del client"
            TextAlignment="Center" />

        <components:ClientsDetailsForm
            Grid.Row="1"
            Margin="0,30,0,0"
            DataContext="{Binding ClientDetailsFormViewModel}" />

    </Grid>
</UserControl>
